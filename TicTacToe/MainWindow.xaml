<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TicTacToe" x:Name="Main"
        Title="Caro" Height="620" Width="550">
    <Grid x:Name="Root">
        <local:StartScreen x:Name="StartScreen" Visibility="Visible" />

        <local:LoadDialog x:Name="LoadDialog" Visibility="Collapsed" />
        
        <local:BoardSizeDialog x:Name="BoardSizeDialog" Visibility="Collapsed" />
        
        <local:GameScreen x:Name="GameScreen" Visibility="Collapsed"
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        <local:HelpScreen x:Name="HelpScreen" Visibility="Collapsed" />
        
        <local:SaveDialog x:Name="SaveDialog" Visibility="Collapsed" />
        
        <local:EndScreen x:Name="EndScreen" Visibility="Collapsed" />
    </Grid>
</Window>
